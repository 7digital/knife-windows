<%= "SETX HTTP_PROXY \"#{knife_config[:bootstrap_proxy]}\"" if knife_config[:bootstrap_proxy] %>
mkdir C:\chef

> C:\chef\wget.vbs (
 <%= win_wget %>
)

@rem Install Chef using full-stack installer
cscript /nologo C:\chef\wget.vbs /url:http://s3.amazonaws.com/opscode-full-stack/windows-x86_64/chef-full-0.10.4-1-x86_64.msi /path:%TEMP%\chef-full-0.10.4-1-x86_64.msi
msiexec /qb /i %TEMP%\chef-full-0.10.4-1-x86_64.msi

> C:\chef\validation.pem (
 <%= validation_key %>
)

<% if @config[:encrypted_data_bag_secret] -%>
> C:\chef\encrypted_data_bag_secret (
 <%= encrypted_data_bag_secret %>
)
<% end -%>

> C:\chef\client.rb (
 <%= config_content %>
)

> C:\chef\first-boot.json (
 <%= run_list %>
)

<%= start_chef %>